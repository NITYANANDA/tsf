<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxws file:/home/dkulp/working/cxf/rt/frontend/jaxws/src/main/resources/schemas/blueprint/jaxws.xsd
             http://cxf.apache.org/blueprint/core file:/home/dkulp/working/cxf/rt/core/src/main/resources/schemas/blueprint/core.xsd
             ">


    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    <bean class="demo.secure_greeter.client.Client">
        <argument ref="greeter"/>
    </bean>
    
    <jaxws:client id="greeter" 
        wsdlLocation="classpath:/ws-secpol-wsdl/greeter.wsdl"
        serviceClass="com.talend.examples.secure_greeter.SecureGreeterPortType"
        xmlns:ns1="http://talend.com/examples/secure-greeter"
        serviceName="ns1:SecureGreeterService"
        endpointName="ns1:GreeterPort">
        <jaxws:properties>
            <entry key="ws-security.username" value="abcd"/>
            <entry key="ws-security.callback-handler">
                <bean class="com.talend.examples.secure_greeter.PasswordCallback"/> 
            </entry>
            <entry key="ws-security.encryption.properties" value="/ws-secpol-wsdl/bob.properties"/>
        </jaxws:properties>
    </jaxws:client>
</blueprint>